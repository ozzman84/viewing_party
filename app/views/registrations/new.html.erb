<section id="new-user-form">
  <%= form_with model: @user, url: sign_up_path, local: true do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign Up" %>
  <% end %>
</section>