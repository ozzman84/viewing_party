<h1>Viewing Party</h1>
<body class="text-center">
    <!-- <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> -->
    <h4>Please sign in</h4>
    <%= form_with url: sign_in_path, local: true do |f| %>
      <%= f.label :email %><br/>
      <%= f.text_field :email %><br/><br/>
      <%= f.label :password %><br/>
      <%= f.password_field :password %><br/><br/>
      <%= f.submit "Log In" %><br/><br/>
    <% end %>
    <div class='container'>
      <label>
        <%= link_to "Sign Up", sign_up_path %><br/><br/>
      </label>
    </div>
</body>
